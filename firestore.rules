rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read access to products for everyone (including unauthenticated users)
    match /productos/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to reviews for everyone
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow read access to userPoints for the owner only
    match /userPoints/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write to orders for the owner only
    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow admin access to all collections
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
